{
  "name": "tikkun.io",
  "version": "1.0.0",
  "description": "The online tikkun you always wanted, but never had.",
  "main": "index.js",
  "type": "module",
  "ava": {
    "files": [
      "src/*.test.js"
    ],
    "nodeArguments": [
      "--loader=esbuild-node-loader",
      "--experimental-specifier-resolution=node"
    ]
  },
  "scripts": {
    "start": "python -m SimpleHTTPServer",
    "test": "ava",
    "test:watch": "npm test -- --watch",
    "test:ui": "cypress run",
    "build:css": "cp node_modules/normalize.css/normalize.css dist/",
    "build": "npm run build:css && esbuild --bundle --outfile=\"dist/bundle.js\" --sourcemap src/index.js",
    "watch": "onchange --initial 'src/**/*.js' -- npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akivajgordon/tikkun.io.git"
  },
  "author": "Akiva Gordon <akivag29@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/akivajgordon/tikkun.io/issues"
  },
  "homepage": "https://github.com/akivajgordon/tikkun.io#readme",
  "dependencies": {
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "ava": "^4.3.1",
    "cypress": "^10.4.0",
    "esbuild": "^0.14.53",
    "esbuild-node-loader": "^0.8.0",
    "onchange": "^7.1.0"
  }
}
